<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola01"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola02"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/img03"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola03"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img04"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola04"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img05"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola05"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img06"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola06"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img07"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola07"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img08"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola08"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img09"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola09"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola11"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img12"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola12"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img13"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola13"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img14"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola14"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img15"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola15"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img16"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola16"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img17"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola17"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img18"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola18"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img19"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola19"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img20"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img21"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola21"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img22"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola22"/>

            <TextView
                android:id="@+id/prestart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:text="@string/prestart"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:textSize="32sp"/>

            <ImageView
                android:id="@+id/img23"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola23"/>

            <TextView
                android:id="@+id/remain_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="32sp"
                android:textColor="@color/red"
                android:gravity="center_vertical|left"/>

            <ImageView
                android:id="@+id/img24"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola24"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/img25"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/duola25"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/test_control"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <Button
            android:id="@+id/start_test"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="@string/start_test"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/state_notice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fontFamily="monospace"
            android:gravity="center_vertical"
            android:textSize="28sp" />

        <Button
            android:id="@+id/result"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textSize="28sp"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/colorPrimary"
            android:enabled="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
</LinearLayout>
